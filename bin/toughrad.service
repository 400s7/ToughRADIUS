[Unit]  
Description=toughrad  
After=network.target remote-fs.target nss-lookup.target  
   
[Service]  
Type=forking  
PIDFile=/var/toughradius/toughrad.pid
ExecStart=/usr/local/toughradius/toughrad start 
ExecReload=/usr/local/toughradius/toughrad restart 
ExecStop=/usr/local/toughradius/toughrad stop 
PrivateTmp=true  
   
[Install]  
WantedBy=multi-user.target  